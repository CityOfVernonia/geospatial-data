{
  "copyright": "FEMA and City of Vernonia, Oregon",
  "fields": [
    {
      "alias": "Case number",
      "name": "case_number",
      "type": "string"
    },
    {
      "alias": "Name",
      "name": "name",
      "type": "string"
    },
    {
      "alias": "Date",
      "name": "date",
      "type": "string"
    },
    {
      "alias": "Type",
      "name": "type",
      "type": "string"
    },
    {
      "alias": "Status",
      "name": "status",
      "type": "string"
    },
    {
      "alias": "Outcome",
      "name": "outcome",
      "type": "string"
    },
    {
      "alias": "Community",
      "name": "community",
      "type": "string"
    },
    {
      "alias": "Determination letter url",
      "name": "city_url",
      "type": "string"
    }
  ],
  "labelingInfo": [
    {
      "labelExpressionInfo": {
        "expression": "$feature.case_number + TextFormatting.NewLine + $feature.date"
      },
      "minScale": 1500,
      "symbol": {
        "color": "darkviolet",
        "font": {
          "family": "Roboto",
          "size": 8,
          "weight": "bolder"
        },
        "haloColor": "white",
        "haloSize": 1,
        "type": "text"
      }
    }
  ],
  "outFields": ["*"],
  "popupEnabled": true,
  "popupTemplate": {
    "title": "{case_number}",
    "content": [
      {
        "fieldInfos": [
          {
            "fieldName": "name",
            "label": "Name"
          },
          {
            "fieldName": "date",
            "label": "Date"
          },
          {
            "fieldName": "type",
            "label": "Type"
          },
          {
            "fieldName": "status",
            "label": "Status"
          },
          {
            "fieldName": "outcome",
            "label": "Outcome"
          },
          {
            "fieldName": "url",
            "label": "Determination letter"
          }
        ],
        "type": "fields"
      }
    ]
  },
  "renderer": {
    "type": "simple",
    "symbol": {
      "color": "darkviolet",
      "outline": {
        "color": "white",
        "width": 1.5
      },
      "size": 8,
      "style": "square",
      "type": "simple-marker"
    }
  },
  "title": "Letter of Map Amendments (LOMAs)",
  "url": "https://cityofvernonia.github.io/geospatial-data/letter-of-map-amendments/letter-of-map-amendments.geojson"
}
